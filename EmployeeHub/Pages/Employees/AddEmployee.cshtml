@page
@model EmployeeHub.Pages.Employees.AddEmployeeModel

@{
}

<h1>Employee Registration Form</h1>

<style>
    .custom-btn {
        background-color: #1B273F;
        border-color: #1B273F;
        color: #C3C5C4;
    }

    .custom-btn:hover {
        background-color: Grey;
        border-color: Grey;
    }

    .custom2-btn {
        background-color: #C3C5C4;
        border-color: #C3C5C4;
        color: white;
    }

    .custom2-btn:hover {
        background-color: Grey;
        border-color: Grey;
    }
</style>

<br/> <br/>

<form method="post">

    <input type="hidden" asp-for="Employee.CreatorName" value="@User.Identity.Name" />
    <input type="hidden" asp-for="Employee.CreatedDate" value="@DateTime.Now" />
    
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Employee.Name"/>
        <span asp-validation-for="Employee.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Employee.Email" />
    </div>
    <div class="mb-3">
        <label class="form-label">Phone Number</label>
        <input type="tel" class="form-control" asp-for="Employee.Phone"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Position</label>
        <input type="text" class="form-control" asp-for="Employee.Position"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Employee.Address"/>
    </div>

    <!-- Display ModelState errors -->
    @foreach (var modelState in ViewData.ModelState.Values)
    {
        foreach (var error in modelState.Errors)
        {
            <div class="text-danger">Error: @error.ErrorMessage</div>
        }
    }

    <div class="mb-3">
        <button type="submit" class="btn btn-outline-primary custom-btn">Add</button>
        <a class="btn btn-outline-primary custom2-btn" asp-page="/Employees/ViewEmployee">Cancel</a>
    </div>
</form>