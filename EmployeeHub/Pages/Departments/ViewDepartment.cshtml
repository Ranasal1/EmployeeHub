@page
@model EmployeeHub.Pages.Departments.ViewDepartmentModel

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
}

<style>
    .custom-btn {
        background-color: #1B273F;
        border-color: #1B273F;
        color: #C3C5C4;
    }
    .custom-btn:hover {
        background-color: Grey;
        border-color: Grey;
    }
</style>

<h3>Departments</h3>

<hr/>
@if (User.IsInRole("Admin"))
{
    <div class="d-grid gap-2 col-4">
        <a class="btn btn-outline-primary btn-sm custom-btn" asp-page="/Departments/AddDepartment"><i class="fas fa-plus"></i>  Add Department</a>
    </div>
}


<br/> <br/>
<div class="row">
    @foreach(var item in Model.departments)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body d-flex flex-column"> 
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Description: @item.Description</p>
                    <p class="card-text">Email: @item.ContactInformation</p>
                    <p class="card-text">Address: @item.Address</p>
                    @if (User.IsInRole("Admin")){
                        <a class="btn btn-outline-primary btn-sm custom-btn" asp-page="/Departments/EditDepartment" asp-route-ID="@item.Id"> <i class="far fa-edit"></i>  Edit</a>
                        <br/><br/><br/>
                        <a class="btn btn-outline-primary btn-sm custom-btn" asp-page="/Departments/DeleteDepartment" asp-route-ID="@item.Id"> <i class="far fa-edit"></i>  Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
