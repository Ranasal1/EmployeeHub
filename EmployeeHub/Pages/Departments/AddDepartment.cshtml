@page
@model EmployeeHub.Pages.Departments.AddDepartmentModel
@{
}

<h1>Department Registration Form</h1>

<style>
    .custom-btn {
        background-color: #1B273F;
        border-color: #1B273F;
        color: #C3C5C4;
    }

    .custom-btn:hover {
        background-color: Grey;
        border-color: Grey;
    }

    .custom2-btn {
        background-color: #C3C5C4;
        border-color: #C3C5C4;
        color: white;
    }

    .custom2-btn:hover {
        background-color: Grey;
        border-color: Grey;
    }
</style>

<br/> <br/>

<form method="post">

    <input type="hidden" asp-for="Department.CreatorName" value="@User.Identity.Name" />
    <input type="hidden" asp-for="Department.CreatedDate" value="@DateTime.Now" />
    
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Department.Name"/>
        <span asp-validation-for="Department.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Department.Description" />
    </div>
    <div class="mb-3">
        <label class="form-label">Contact Information</label>
        <input type="email" class="form-control" asp-for="Department.ContactInformation"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Department.Address"/>
    </div>

    <!-- Display ModelState errors -->
    @foreach (var modelState in ViewData.ModelState.Values)
    {
        foreach (var error in modelState.Errors)
        {
            <div class="text-danger">Error: @error.ErrorMessage</div>
        }
    }

    <div class="mb-3">
        <button type="submit" class="btn btn-outline-primary custom-btn">Add</button>
        <a class="btn btn-outline-primary custom2-btn" asp-page="/Departments/ViewDepartment">Cancel</a>
    </div>
</form>
